@model WebFindJob.Models.JobApplication

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Job Application</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeekerId" class="control-label">SeekerId</label>
                <input asp-for="SeekerId" class="form-control" readonly value="@ViewBag.SeekerId" />
            </div>
            <div class="form-group">
                <label asp-for="JobListingId" class="control-label"></label>
                <select asp-for="JobListingId" class="form-control">
                    <option value="@ViewBag.JobListingId" selected>@ViewBag.JobListingId</option>
                </select>
                <span asp-validation-for="JobListingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Position</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliedDate" class="control-label">Applied Date</label>
                <input asp-for="AppliedDate" class="form-control" />
                <span asp-validation-for="AppliedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverLetter" class="control-label">Cover Letter</label>
                <textarea asp-for="CoverLetter" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CoverLetter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CvFilePath" class="control-label"></label>
                <input asp-for="CvFilePath" type="file" name="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
